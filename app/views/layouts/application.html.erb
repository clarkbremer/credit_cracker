<!DOCTYPE html>
<html>
  <head>
    <title>Credit Cracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid.flush-left">
      <div class="row no-gutters align-items-center">
        <div class="col">
          <%= image_tag "polytech_avatar.png" %>
        </div>
        <div class="col-md-auto">
          <ul class="nav justify-content-center">
            <li class="nav-item">
              <%= link_to('STUDENTS', students_path, class: "nav-link") %>
            </li>
            <li class="nav-item nav-link">|</li>
            <li class="nav-item">
              <%= link_to('BADGES', badges_path, class: "nav-link") %>
            </li>
            <li class="nav-item nav-link">|</li>
            <li class="nav-item">
              <%= link_to('STANDARDS', standards_path, class: "nav-link") %>
            </li>
          </ul>
        </div>
        <div class="col">
          <ul class="nav justify-content-end">
            <li class="nav-item">
              <% unless controller_name == "sessions" %>
                <% if user_signed_in? %>
                  <%= link_to('LOGOUT', destroy_user_session_path, :method => :delete, class: "nav-link") %>
                <% else %>
                  <%= link_to('LOGIN', new_user_session_path, class: "nav-link")  %>
                <% end %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <nav class="nav navbar-orange justify-content-center">
      <p>POLYTECH CREDIT CRACKER</p>
    </nav>

    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>

</html>
