<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table class='dtable cell-border table table-striped table-bordered' cellspacing='0' width='100%'>
  <thead>
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Student ID</th>
      <th class="w-25"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.last_name %></td>
        <td><%= student.first_name %></td>
        <td><%= student.student_id %></td>
        <td><%= link_to 'Show', student, class: "btn btn-primary btn-xs" %>
            <%= link_to 'Edit', edit_student_path(student), class: "btn btn-primary btn-xs" %>
            <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>

<script type="text/javascript">
$(document).ready(function(){
  $('.dtable').DataTable({
    "pageLength": 15,
    "lengthMenu": [ [10, 15, 25, 50, -1], [10, 15, 25, 50, "All"] ],
    "order": [[ 0, "asc" ]],
    "columnDefs": [
      { "targets": [3], "orderable": false}
    ]
  });
});
</script>
